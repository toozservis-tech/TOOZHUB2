# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///./vehicles.db
VEHICLE_DB_URL=sqlite:///./vehicles.db

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=toozhub2-dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# API CONFIGURATION
# =============================================================================
PUBLIC_API_BASE_URL=http://127.0.0.1:8000
API_BASE_URL=http://127.0.0.1:8000
FRONTEND_BASE_URL=http://127.0.0.1:8000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=*

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.mail.webnode.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=info@toozservis.cz

# =============================================================================
# DATAOVOZIDLECH.CZ API
# =============================================================================
DATAOVO_API_KEY=your-api-key-here
DATAOVO_API_BASE_URL=https://api.dataovozidlech.cz/api/vehicletechnicaldata/v2

# =============================================================================
# AUTOPILOT M2M API
# =============================================================================
AUTOPILOT_SHARED_SECRET=your-shared-secret-here
